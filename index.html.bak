<!DOCTYPE html>
<html>
<head>
<META HTTP-EQUIV="CACHE-CONTROL" CONTENT="NO-CACHE">
	<!-- Scripts -->
	<script type="text/javascript" src="Scripts/roomReader.js" ></script>
	<!-- <script type="text/javascript" src="Scripts/sidebar.js"></script> -->
	
	<!-- Style Sheets -->
	<!-- <link rel="stylesheet" type="text/css" href="Style/sidebar.css"> -->
	
	<style>
		body {
			background-color: black;
			background-image: radial-gradient(
			rgba(0, 50, 0, 0.75), black 120%
			);
			height: 100vh;
			color: green;
			font-family: 'Cascadia Code', monospace;
			overflow: hidden;
		}
		
		body::after {
		  content: "";
		  z-index: -1;
		  position: absolute;
		  top: 0;
		  left: 0;
		  width: 100vw;
		  height: 100vh;
		  background: repeating-linear-gradient(0deg, rgba(black, 0.15), rgba(black, 0.15) 1px, transparent 1px, transparent 2px);
		}
	
		#gameText {
			left-margin: 10px;
			display: flex;
			flex-direction: column;
			justify-content: flex-end;
			text-align: justify;
			position: absolute;
			bottom: 35px;
			display: flex;
			flex-direction: column;
			overflow: auto;
			margin-top: 25px;
			max-height: 90vh;
			width: 96vw;
			margin-left: 2vw;
			margin-right: 2.5vw;
		}
	
		.roomNumber {
			color: #FFBF00;
		}
		
		#inputContianer {
			position:absolute;
			left:0px;
			bottom:0px;
			height:3vh;
			width: 96vw;
			margin-left: 2vw;
		}
		
		#inputBox {
			width: 100vw;
			white-space: nowrap;
		}
		
		#inputBoxLeft {
			float: left;
		}
		
		#inputBoxRight {
			height: 10px;
			margin-left: 90px;
			margin-right: 0px;
		}
		
		#inputBox #roomNumber{
			margin-right: 0px;
			width: calc(100% - 90px);
			white-space: nowrap;
			background-color: transparent;
			color: green;
			outline: none;
			border: none;
			
		}
		
		#Navbar {
			position: fixed;
			bottom: 0;
			top: 0;
			left: 0;
			width: 300px;
			border: 3px solid #73AD21;
		
		}
		
		#main{
			position: relative;
			height: 97%;
			width: 98%		
		}
		
	
	</style>
</head>

<body>
<!-- Main Boday -->
<div id='main'> 
<div id="gameText"></div>

<!-- This is the players input box, the main way for them to interact -->
<div id='inputContianer'>
<div id="inputBox">
	<div id="inputBoxLeft">[home ~/]> </div> <!--left-->
	<div id="inputBoxRight"><!--right-->
		<input type="text" id="roomNumber">
		<input id="inputTriggerButton" type="button" value="Go" onclick="readRoomInput(document.getElementById('roomNumber').value);
		document.getElementById('roomNumber').value=''" hidden>
	</div>
	<script>
	<!-- via: https://www.w3schools.com/howto/howto_js_trigger_button_enter.asp -->
		var input = document.getElementById("roomNumber");
			input.addEventListener("keypress", function(event) {
			if (event.key === "Enter") {
				event.preventDefault();
				document.getElementById("inputTriggerButton").click();
			}
		});
	</script>

</div>
</div>
</div>
<script>
	requestRoom(-1, true);
</script>
</body>
</html> 	